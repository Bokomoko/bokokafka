BOKO_HOST=bokodell14.local

# Host ports (choose values that avoid conflicts with other services)
BROKER_PORT=19092
ZK_PORT=12181
UI_PORT=8087

# Image versions
# Confluent Platform version for Kafka/Zookeeper images
CP_VERSION=7.5.3
# Kafka UI image tag
KAFKA_UI_TAG=latest

# Pod/containers/volumes
POD_NAME=bk-kafka
RESTART_POLICY=unless-stopped

ZK_DATA_VOL=bk_zk_data
ZK_LOG_VOL=bk_zk_log
KAFKA_DATA_VOL=bk_kafka_data

# Kafka settings
KAFKA_BROKER_ID=1
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
